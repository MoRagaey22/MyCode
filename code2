#include <bits/stdc++.h>
using namespace std;
#define ll long long
#define IOS ios::sync_with_stdio(0); cin.tie(0); cout.tie(0);


void solve() {
    int n,k,ans=0,arr[50];
    cin>>n>>k;
    for(int i=1;i<=n;i++){
        cin>>arr[i];
    }
    for(int i=1;i<=n;i++){
        if(arr[i]>=arr[k] && arr[i]!=0)
            ans++;
    }
    cout<<ans;
}

int main() {
    IOS;
    int t=1;
    //cin >> t;
    while(t--)solve();
}
