#include <bits/stdc++.h>
using namespace std;
#define ll long long
#define IOS ios::sync_with_stdio(0); cin.tie(0); cout.tie(0);


void solve() {
    int n,k,ans=0; cin>>n>>k;
    int arr[50];
    for(int i=0;i<n;i++)
        cin>>arr[i];
    for(int i=0;i<n;i++)
        if(arr[i]>=arr[k] && arr[i]!=0) ans++;
    cout<<ans;
}

int main() {
    IOS;
    int t=1;
    //cin >> t;
    while(t--)solve();
}
